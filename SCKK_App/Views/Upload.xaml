<Window x:Class="SCKK_App.Views.Upload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCKK_App.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Upload"
        Height="215"
        Width="250"
        Foreground="White"
        ResizeMode="NoResize" Icon="/Resources/taxi.ico" WindowStartupLocation="CenterScreen">
    
    <Grid Background="#FF181622">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Feltöltés"
                       HorizontalAlignment="Center"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="15"/>
            <TextBox x:Name="FileNameTb"
                     Text="Fájl név"
                     Foreground="Gray"
                     Margin="30 15"
                     FontSize="18"/>
            <Button x:Name="UploadBtn"
                    Content="Feltöltés"
                    Margin="30 15"
                    Click="UploadBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
